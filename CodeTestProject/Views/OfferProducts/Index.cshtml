@model IEnumerable<CodeTestProject.Models.OfferProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Offer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Offer.OfferName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfferProductID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfferProductID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OfferProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

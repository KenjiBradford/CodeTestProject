@model IEnumerable<CodeTestProject.Models.Offer>

@{
    ViewData["Title"] = "Offers";
}

<h1>Offers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get" >
    <p>
        Search for Product Offers: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OfferName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfferProducts)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OfferName)
            </td>
            <td>
                @foreach(var op in item.OfferProducts) {
                    @(op.Product.Name) <br />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfferName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfferName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OfferName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
